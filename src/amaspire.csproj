<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>amaspire</ToolCommandName>
    <PackageId>amaspire</PackageId>
    <Version>0.1.0</Version>
    <Authors>amaspire contributors</Authors>
    <Description>Generate AWS CloudFormation templates from .NET Aspire manifests</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/YOUR_ORG/amaspire</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="System.Text.Json" Version="9.0.0" />
    <PackageReference Include="Scriban" Version="5.10.0" />
  </ItemGroup>

</Project>
